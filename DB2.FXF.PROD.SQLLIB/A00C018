SELECT
    SUBSTR(SPK.COLLID, 1, 18) AS COLLID,
    SUBSTR(SPK.NAME, 1, 18) AS NAME,
    HEX(SPK.CONTOKEN) AS  CONTOKEN
  FROM SYSIBM.SYSPACKAGE SPK
  LEFT OUTER JOIN SYSIBM.SPTR SP1
    ON SPK.LOCATION = SP1.SPTLOCID AND
           SPK.COLLID  = SP1.SPTCOLID AND
           SPK.NAME = SP1.SPTNAME  AND
           SPK.CONTOKEN = SP1.SPTCONID AND
           SP1.SPTSEC  IN  (X'FFFFFFFE', X'FFFFFFFC', X'FFFFFFFD')
  WHERE SP1.SPTNAME IS NULL
        AND SPK.PKSIZE = -2147483648
        AND SPK.SYSENTRIES = -32768;
