-- VARY WLM,APPLENV=<<WLMENV>>,REFRESH
--SELECT ROU.SCHEMA, ROU.NAME, PRM.NAME ,PRM.TYPENAME,
--       ROU.COMMIT_ON_RETURN
--
SELECT DISTINCT 'VARY WLM,APPLENV='||STRIP(ROU.WLM_ENVIRONMENT)||
       ',REFRESH'
FROM
  SYSIBM.SYSROUTINES ROU,
  SYSIBM.SYSPARMS PRM
WHERE ROU.COMMIT_ON_RETURN = 'A'
  AND ROU.SCHEMA = PRM.SCHEMA
  AND ROU.SPECIFICNAME = PRM.NAME
  AND PRM.TYPENAME IN ('CLOB' ,'BLOB','DBCLOB','XML')
  AND ROU.WLM_ENVIRONMENT <> '';
