 SELECT CHAR(NAME,30), CHAR(DBNAME,8), CHAR(CREATEDBY,8), BPOOL
 FROM SYSIBM.SYSTABLESPACE
 WHERE BPOOL IN
 ('BP8K0','BP16K0','BP32K')
 ORDER BY DBNAME,BPOOL WITH UR;

 SELECT CHAR(CREATOR,10),CHAR(NAME,30),CHAR(DBNAME,8), BPOOL
 FROM SYSIBM.SYSINDEXES
 WHERE BPOOL IN
 ('BP8K0','BP16K0','BP32K')
 ORDER BY DBNAME, CREATOR, NAME  WITH UR;
