  -ALTER BUFFERPOOL(BP35)  VPSIZE(20000)
  -ALTER BUFFERPOOL(BP36)  VPSIZE(50000)
  -DISPLAY BUFFERPOOL(BP30)
  -DISPLAY BUFFERPOOL(BP34)
  -DISPLAY BUFFERPOOL(BP35)
  -DISPLAY BUFFERPOOL(BP36)
