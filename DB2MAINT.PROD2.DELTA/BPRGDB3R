//UXC401M3 JOB ,'DB2 SYSTEM',CLASS=S,MSGCLASS=X,TIME=1440,
//         NOTIFY=&SYSUID ,USER=SYSPRO
/*JOBPARM SYSAFF=MVSQ
//*
//JOBLIB  DD  DSN=SSXDP.DB3R.SDSNEXIT,DISP=SHR
//         DD DISP=SHR,DSN=SDB3R.SDSNLOAD
//BPOOL   EXEC PGM=IKJEFT01,DYNAMNBR=20,COND=(4,LT)
//SYSPRINT DD  SYSOUT=*
//SYSTSPRT DD  SYSOUT=*
//SYSTSIN  DD  *
  DSN SYSTEM(DB3R)
  -DISPLAY BUFFERPOOL(BP5,BP8,BP8K0,BP16K0)
  -ALTER BUFFERPOOL(BP5)  VPSIZE(100000)
  -ALTER BUFFERPOOL(BP8)  VPSIZE(100000)
  -ALTER BUFFERPOOL(BP8K0)   VPSIZE(5000)
  -ALTER BUFFERPOOL(BP16K0)  VPSIZE(5000)
  -DISPLAY BUFFERPOOL(BP5,BP8,BP8K0,BP16K0)
  -DIS GROUPBUFFERPOOL(GBP5,GBP8,GBP8K0,GBP16K0)
  END
//
  -DISPLAY BUFFERPOOL(BP37)
