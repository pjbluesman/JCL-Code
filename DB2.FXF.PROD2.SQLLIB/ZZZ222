-- SQL TO BUILD THE UT STATUS STATEMENTS
-- TS & IDX SPACE WILL BE PLACED IN UT STATUS
-- DECOM_CHNG_NBR WILL NEED TO BE ENTERED
--
-- FOR THE CHANGE NUMBER DO NOT USE - CH9999999
--  LEAVE OUT THE H AND USE C9999999
--
 SELECT
 DISTINCT ' -STA  DATABASE(' ||STRIP(DATABASE_NM) ||
  ') SPACENAM(' ||STRIP(TABLESPACE_NM)|| ') ACCESS(UT)'
 FROM @DBA.OBSOLETE_DECOM_OBJECTS
-- WHERE DECOM_CHNG_NBR IN  ('CHG0374404')
 WHERE DECOM_CHNG_NBR LIKE 'C%404%'

 UNION ALL

 SELECT
 DISTINCT ' -STA  DATABASE(' ||STRIP(A.DATABASE_NM) ||
  ') SPACENAM(' ||STRIP(B.INDEXSPACE)|| ') ACCESS(UT)'
 FROM @DBA.OBSOLETE_DECOM_OBJECTS A, SYSIBM.SYSINDEXES B
-- WHERE A.DECOM_CHNG_NBR IN  ('CHG0374404')
 WHERE A.DECOM_CHNG_NBR LIKE 'C%404%'
   AND A.TABLE_NM = B.TBNAME
   AND A.DATABASE_NM   = B.DBNAME


